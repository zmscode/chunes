{
	"compilerOptions": {
		"jsx": "react-jsx",
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["dom", "ESNext"],
		"experimentalDecorators": true,
		"composite": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@*": ["./src/*"],
			"@utils/*": ["./src/utils/*"],
			"@assets/*": ["./src/assets/*"],
			"@components/*": ["./src/components/*"],
			"@helpers/*": ["src/utils/helpers/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@styles/*": ["./src/styles/*"],
			"@routes/*": ["./src/routes/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@stores/*": ["src/utils/stores/*"],
			"@services/*": ["./src/services/*"],
			"@types": ["src/utils/types/types.ts"],
			"@enums": ["src/utils/types/enums.ts"],
			"@props": ["src/utils/types/props.ts"]
		},
		"outDir": "dist",
		"moduleResolution": "bundler",
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*",
		"./package.json",
		"./forge.config.ts",
		"*.mts",
		"vite.renderer.config.mts"
	]
}
